<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p_iv_portada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/jaws" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/p_tv_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:text="Título"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_tv_anio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Año"
                        android:textSize="20dp" />

                    <RatingBar
                        android:id="@+id/p_rb_valoracion"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/p_tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:paddingTop="10dp"
                android:scrollbars="none"
                android:text="Descripción" />

            <TextView
                android:id="@+id/p_p_subidapor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Película subida por:"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/p_iv_fotoperfil"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/p_p_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/p_b_modificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificar Película" />

            <Button
                android:id="@+id/p_b_borrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrar Película" />

            <Button
                android:id="@+id/p_b_volver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>